{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noEmit": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"baseUrl": "./",
		"outDir": "./dist",
		// Use ES5 to ensure compatibility with web.
		// Otherwise you can use ES6.
		"target": "ES5",
		"module": "CommonJS",
		"declaration": true,
		"jsx": "react",
		"moduleResolution": "node",
		"lib": ["es2018", "dom"],
	},
	"include": [
		"./src"],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/__tests__",
		"src/**/internal"
	]
}